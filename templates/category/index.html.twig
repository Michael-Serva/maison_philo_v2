{% extends 'category/layout.html.twig' %}
{% block title %}
    {% trans %}Category index{% endtrans %}
{% endblock %}
{% block body %}
    <h1>{% trans %}Category index{% endtrans %}</h1>
    <table class="table table-hover table-dark text-center align-middle">
        <thead>
            <tr>
                <th>{% trans %}Title{% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.title|trans }}</td>
                    <td>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}">
                            <i class="fas fa-eye btn-success btn"></i>
                        </a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fas fa-edit btn-warning btn"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{% trans %}no records found{% endtrans %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-warning" href="{{ path('app_category_new') }}">
        {% trans %}Create new category{% endtrans %}
    </a>
{% endblock %}
