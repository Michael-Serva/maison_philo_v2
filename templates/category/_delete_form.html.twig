{% set confirm = 'Are you sure you want to delete this item?' %}
<form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm({{confirm|trans}} );">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
	<button class="btn">{% trans %}Delete{% endtrans %}</button>
</form>
