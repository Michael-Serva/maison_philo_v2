{% extends 'category/layout.html.twig' %}
{% block title %}
    {% trans %}Category{% endtrans %}
{% endblock %}
{% block body %}
    <h1>{% trans %}Category{% endtrans %}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Title{% endtrans %}</th>
                <td>{{ category.title }}</td>
            </tr>
        </tbody>
    </table>
    <div>
        <a href="{{ path('app_category_index') }}" class="btn btn-outline-primary">
            {% trans %}back to list{% endtrans %}
        </a>
    </div>
    <div class="mt-3">
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-warning">
            {% trans %}edit{% endtrans %}
        </a>
    </div>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
