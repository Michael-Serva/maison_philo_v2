{% extends 'product_customer/layout.html.twig' %}
{% block title %}
    {% trans %}Product main page |{% endtrans %}{{ parent() }}
{% endblock %}
{% block body %}
    {% for message in app.flashes('cart') %}
        {% include "component/molecules/alertDesign.html.twig" with {
                message : message,
                alert : "success"
            } %}
    {% endfor %}
    <div
        class="row justify-content-evenly gx-0">
        {# filter #}
        <div class="col-md-3 col-12 filter bg-light p-2">
            {% include 'component/molecules/filter.html.twig' %}
        </div>
        <div
            class="col-md-9 col-12 row justify-content-evenly align-middle">
            {# pagination #}
            <div class="justify-content-center js-filter-pagination">
                {% include 'component/atoms/pagination.html.twig' %}
            </div>
            {# sorting #}
            <div class="js-filter-sorting d-flex justify-content-evenly mb-2">
                {% include 'component/organisms/sorting.html.twig' %}
            </div>
            <div class="spinner-border js-loading" role="status" aria-hidden="true" style="display:none">
                <span class="sr-only">{% trans %}Loading{% endtrans %}...</span>
            </div>
            {# show product #}
            <div class="js-filter-content row justify-content-evenly" data-aos="fade-up" data-aos-duration="1500">
                {% include 'component/organisms/products.html.twig' %}
            </div>
            {# pagination #}
            <div class="text-center js-filter-pagination">
                {% include 'component/atoms/pagination.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
