{% extends 'product_customer/layout.html.twig' %}
{% block title %}
    {% trans %}Product main page |{% endtrans %}{{ parent() }}
{% endblock %}
{% block body %}
    <div class="row justify-content-evenly gx-0">
        <div class="col-md-3 col-12 filter bg-light p-2">
            {% include "component/molecules/filter.html.twig" %}
        </div>
        <div class="col-md-9 col-12 row justify-content-evenly align-middle">
            <h1>{% trans %}Page{% endtrans %}
                {{products.page|default('1')}}
            </h1>
            <div class="justify-content-center">
                {% include "component/atoms/pagination.html.twig" %}
            </div>
            <div class="d-flex justify-content-evenly mb-2">
                <button class="bg-success rounded text-light">
                    {{knp_pagination_sortable(products, 'Price'|trans, 'p.price')}}
                    <i class="fas fa-sort"></i>
                </button>
                <button class="bg-success rounded text-light">
                    {{knp_pagination_sortable(products, 'Promo'|trans, 'p.promo')}}
                    <i class="fas fa-sort"></i>
                </button>
                <button class="bg-success rounded text-light">
                    {{knp_pagination_sortable(products, 'Title'|trans, 'p.title')}}
                    <i class="fas fa-sort"></i>
                </button>
            </div>
            {% for product in products %}
                {% include "component/organisms/productShow.html.twig" %}
            {% endfor %}
            <div class="text-center">
                {% include "component/atoms/pagination.html.twig" %}
            </div>
        </div>
    </div>
{% endblock %}
