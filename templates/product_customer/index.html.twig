    <div class="row justify-content-evenly mb-3">
        <div class="card col-md-4 mb-2 shadow" style="width: 30rem;">
            <div class="index-img">
                <img src="{{asset('images/hygienne et soin-presentation.jpg')}}" class="card-img-top" alt="{% trans %}Image health care{% endtrans %}"></div>
            <div class="card-body text-center">
                <h5 class="card-title">{% trans %}health care{% endtrans %}</h5>
                <a href="{{path('app_productcustomer_index')}}" class="btn button-success button-philo">{% trans %}Access{% endtrans %}</a>
            </div>
        </div>
        <div class="card col-md-4 mb-2 shadow" style="width: 30rem;">
            <div class="index-img">
                <img src="{{asset('images/incontinence-presentation.png')}} " class="card-img-top" alt="{% trans %}Image health care{% endtrans %}">
            </div>
            <div class="card-body text-center">
                <h5 class="card-title">{% trans %}incontinence{% endtrans %}</h5>
                <a href="{{path('app_productcustomer_index')}}" class="btn button-philo">{% trans %}Access{% endtrans %}</a>
            </div>
        </div>
        <div class="card col-md-4 mb-2 shadow" style="width: 30rem;">
            <div class="index-img">
                <img src="{{asset('images/fauteuil-roulant-presentation.jpg')}} " class="card-img-top" alt="{% trans %}Image health care{% endtrans %}">
            </div>
            <div class="card-body text-center">
                <h5 class="card-title">{% trans %}Mobility aid{% endtrans %}</h5>
                <a href="{{path('app_productcustomer_showproducts')}}" class="btn button-philo">{% trans %}Access{% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}
