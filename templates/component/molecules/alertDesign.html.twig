<div classs="container p-5 text-center text-color-maisonphilo" id="alert" style="display:block">
  <div>
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">
      <div class="alert fade_{{ alert }} .fade" role="alert">
        <h4 class="alert-heading">
          <span>
            {% block alert_content %}
            {% endblock %}
            {{ app.user.pseudo ?? app.user.email }}
          </span>
          <span>{{ message|trans }}</span>
        </h4>
      </div>
    </button>
  </div>
</div>
