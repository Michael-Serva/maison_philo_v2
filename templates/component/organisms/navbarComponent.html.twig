<body>
	<nav class="navbar navbar-expand-lg navbar-dark ">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{path(routePath)}} ">
				<h1>MaisonPhilo</h1>
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item"></li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							{% trans %}Bienvenue chez nous{% endtrans %}
						</a>
						<ul class="dropdown-menu text-center" aria-labelledby="navbarDropdown">
							<li>
								<div class="row  ">
									<a class="dropdown-item col fw-bold text-site " href="#">{% trans %}Notre histoire{% endtrans %}</a>
									<a class="dropdown-item d-none col fw-bold text-site " href="#">{% trans %}Notre objectif{% endtrans %}</a>
									<a class="dropdown-item col fw-bold text-site " href="#">{% trans %}Nos produits{% endtrans %}</a>
									<a class="dropdown-item col fw-bold text-site " href="#">{% trans %}Vieillissement{% endtrans %}</a>
									<a class="dropdown-item col fw-bold text-site " href="#">{% trans %}Dossier pays{% endtrans %}</a>
								</div>
								<div class="row">
									<a class="dropdown-item col text-site-or " href="#"></a>
									<a class="dropdown-item col text-site-or d-none" href="#"></a>
									<a class="dropdown-item col text-site-or " href="#">{% trans %}Notre gamme de fauteuil roulant{% endtrans %}</a>
									<a class="dropdown-item col text-site-or " href="#"></a>
									<a class="dropdown-item col text-site-or " href="#">{% trans %}Côte d'Ivoire{% endtrans %}</a>
								</div>
							</li>
						</ul>
					</li>
					{% set test = 10 %}
					{#{{ (test == 10) ? "oui" : "non" }} #}
					{% if app.user %}
						<li
							class="nav-item ">
							{# {{ (test == 10) ? 'bg-danger' : 'bg-warning' }} #}

							<a class="nav-link" href="">{% trans %}Profil{% endtrans %}</a>
						</li>
						{% if app.user.roles[0] == "ROLE_ADMIN" %}
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									{% trans %}Gestion du site{% endtrans %}
								</a>

								<ul class="dropdown-menu text-center" aria-labelledby="navbarDropdown">
									<li>
										<div class="row  ">
											<a class="dropdown-item col fw-bold text-site" href="{{path('admin_index')}}">{% trans %}Gestion des utilisateurs{% endtrans %}</a>

											<a class="dropdown-item col fw-bold text-site" href="">{% trans %}Gestion des catégories{% endtrans %}</a>
											<a class="dropdown-item col fw-bold text-site" href="">{% trans %}Gestion des produits{% endtrans %}</a>
										</div>
									</li>
								</ul>
							</li>
						{% endif %}
					{% endif %}
					{% if not app.user %}
						<li class="nav-item ">
							<a class="nav-link " href="{{ path('app_security_register')}}">{% trans %}Inscription{% endtrans %}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_security_login')}}">{% trans %}Connexion{% endtrans %}</a>
						</li>
					{% endif %}
					{% if app.user %}
						<li class="d-flex">
							<a href="{{ path('app_logout')}}" class="btn text-light">
								{% trans %}Déconnexion{% endtrans %}
								<i class="fas fa-sign-out-alt"></i>
							</a>
						</li>
					{% endif %}
				</ul>
				<form class="d-flex">
					<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
					<button class="btn btn-outline-success" type="submit">{% trans %}Search{% endtrans %}</button>
				</form>
			</div>
		</div>
	</nav>
	<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title" id="myModalLabel">{% trans %}Souhaitez vous vous déconnecter?{% endtrans %}</h4>
				</div>
			</div>
		</div>
	</div>
</body>
