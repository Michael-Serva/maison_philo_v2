{% set deleteItem = 'Are you sure you want to delete this item?' %}
<form method="post" action="{{ path(link, {'id': id}) }}" onsubmit="return confirm({{deleteItem|trans}});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn btn-outline-danger">{% trans %}Delete this user{% endtrans %}</button>
</form>


