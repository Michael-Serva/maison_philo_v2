<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item {{ products.page == 1 ? 'disabled' : ''}} ">
            <a class="page-link" href="?page={{products.page - 1}}">
                {% trans %}Previous{% endtrans %}
            </a>
        </li>
        {% for i in 1.. productsTotalPage %}
            <li class="page-item {{products.page == i ? 'disabled' : ''}}">
                <a class="page-link" href="?page={{i}}">{{i}}</a>
            </li>
        {% endfor %}
        <li class="page-item  {{products.page == productsTotalPage ? 'disabled' : ''}}">
            <a class="page-link" href="?page={{products.page + 1}}">
                {% trans %}Next{% endtrans %}

            </a>
        </li>
    </ul>
</nav>
