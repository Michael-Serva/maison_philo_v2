{% set deleteItem = 'Are you sure you want to delete this item?' %}
<form method="post" action="{{ path('app_admin_delete', {'id': user.id}) }}" onsubmit="return confirm({{deleteItem|trans}});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-outline-danger">{% trans %}Delete this user{% endtrans %}</button>
</form>
