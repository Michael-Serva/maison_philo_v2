{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>Utilisateur</h1>
	<div class="container-fluid">
		<table class="table col">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>FirstName</th>
					<td>{{ user.firstName }}</td>
				</tr>
				<tr>
					<th>LastName</th>
					<td>{{ user.lastName }}</td>
				</tr>
				<tr>
					<th>Password</th>
					<td>{{ user.password }}</td>
				</tr>
				<tr>
					<th>Genre</th>
					<td>{{ user.genre }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>IsVerified</th>
					<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Pseudo</th>
					<td>{{ user.pseudo }}</td>
				</tr>
			</tbody>
		</table>
		<img class="rounded-circle img-fluid" src="{{ user.picture }}" alt=""/>
	</div>
	<a href="{{ path('admin_index') }}">back to list</a>
	<a href="{{ path('admin_edit', {'id': user.id}) }}">edit</a>

	{{ include('admin/_delete_form.html.twig') }}
	
{% endblock %}
