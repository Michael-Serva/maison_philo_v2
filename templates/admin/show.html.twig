{% extends 'base.html.twig' %}
{% block title %}
    {% trans %}User{% endtrans %}
{% endblock %}
{% block body %}
    <h1>{% trans %}Utilisateur{% endtrans %}</h1>
   
        <img class="rounded-circle img-fluid user-picture" src="{{ user.picture }}" alt="picture users"/>
  

    {% embed "component/molecules/tableDesign.html.twig" %}
        {% block table_content %}

            <tbody class="text-start">
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>{% trans %}FirstName{% endtrans %}</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>{% trans %}LastName{% endtrans %}</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ user.genre }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Pseudo</th>
                    <td>{{ user.pseudo }}</td>
                </tr>
            </tbody>


        {% endblock %}
    {% endembed %}
    <a class="btn btn-outline-primary" href="{{ path('app_admin_index') }}">{% trans %}Back to the list{% endtrans %}</a>
    <div class="mt-2">{{ include('admin/_delete_form.html.twig') }}</div>
{% endblock %}
