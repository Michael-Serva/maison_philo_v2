{% extends 'base.html.twig' %}
{% block title %}Product{% endblock %}
{% block body %}
    <h1>Product</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_product_index') }}">back to list</a>
    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
