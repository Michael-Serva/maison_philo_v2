{% extends 'product/layout.html.twig' %}
{% block title %}Product
{% endblock %}
{% block body %}
    {% embed "component/molecules/tableDesign.html.twig" %}
        {% block table_content %}
            <a href="{{ path('app_product_index') }}">
                <i class="fas fa-long-arrow-alt-left text-color-maisonphilo fs-1"></i>
            </a>
            <h1>{% trans %}Product{% endtrans %}</h1>
            <tbody class="text-start">
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ product.title }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Stock</th>
                    <td>{{ product.stock }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="{{asset('images/imagesUpload/' ~ product.image)}}" class="rounded-circle w-50" alt="Image d'une chaise roulante"></td>
                </tr>
            </tbody>
        {% endblock %}
    {% endembed %}
    <div class="justify-content-center">
        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-warning">
            {% trans %}Edit the product{% endtrans %}
        </a>
        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
