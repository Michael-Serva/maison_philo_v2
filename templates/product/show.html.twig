{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
    {% include "component/molecules/tableDesign.html.twig" %}
    {% block table_content %}
        <h1>Product</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ product.title }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Stock</th>
                    <td>{{ product.stock }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ product.image }}</td>
                </tr>
                <tr>
                    <th>DateAt</th>
                    <td>{{ product.dateAt ? product.dateAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('product_index') }}">back to list</a>

        <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {% endblock %}

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
