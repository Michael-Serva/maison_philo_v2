{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="{{asset('css/formSecurity.css')}}"/>
{% endblock %}

{% block body %}
	<div class="col-md-8 col-lg-5 mx-auto shadow-lg mt-5 p-5 rounded " data-aos="zoom-in" data-aos-duration="2000">
		<h1 class="inscription ">Inscription</h1>
		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.pseudo) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.password)}}
		<input type="submit" value="Inscription" class="button_philo btn btn-success col-md-12 mt-3">

		{{ form_end(registrationForm) }}
		<a href="">Vous avez deja un compte,  cliquez ici!</a>
	</div>
{% endblock %}
